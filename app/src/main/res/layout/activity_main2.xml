<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:onClick="onClick"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:background="#FAF493"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Rival"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/ME"
        app:layout_constraintTop_toBottomOf="@+id/money"
        tools:visibility="invisible" />

    <RadioGroup
        android:id="@+id/mul"
        android:layout_width="187dp"
        android:layout_height="131dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="12dp"
        android:background="#C6F2F8"
        app:layout_constraintEnd_toStartOf="@+id/Rival"
        app:layout_constraintTop_toTopOf="@+id/money">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="請選擇倍率"
            android:textColor="#474040"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/x3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="3X"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/x5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5X"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/x10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10X"
            android:textSize="20sp" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/ME"
        android:layout_width="183dp"
        android:layout_height="74dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        app:layout_constraintEnd_toEndOf="@+id/betline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/betline"
        app:layout_constraintTop_toBottomOf="@+id/betline"
        app:layout_constraintVertical_bias="0.507">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="您的點數:"
            android:textColor="#230C0C"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:srcCompat="@drawable/d2" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:srcCompat="@drawable/d1" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:srcCompat="@drawable/d3" />

        <ImageView
            android:id="@+id/image5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:srcCompat="@drawable/d5" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:srcCompat="@drawable/d4" />

        <ImageView
            android:id="@+id/image6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:srcCompat="@drawable/d6" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="184dp"
        android:layout_height="43dp"
        android:layout_marginEnd="136dp"
        android:text="大小比比比"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bigor"
        app:layout_constraintEnd_toStartOf="@+id/money"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mul"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/money"
        android:layout_width="178dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="目前獎金:500 元"
        android:textColor="#222F75"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/Rival"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <ImageView
        android:id="@+id/btn"
        android:layout_width="140dp"
        android:layout_height="157dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Rival"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="@+id/ME"
        app:srcCompat="@drawable/die" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <LinearLayout
        android:id="@+id/betline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="36dp"
        android:background="#C6F2F8"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Rival"
        app:layout_constraintStart_toStartOf="@+id/guideline">

        <TextView
            android:id="@+id/betmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="押金 : "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtmoney"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            tools:text="請下押金" />

    </LinearLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="42dp" />

    <LinearLayout
        android:id="@+id/Rival"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="6dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ME"
        app:layout_constraintTop_toBottomOf="@+id/money"
        app:layout_constraintVertical_bias="0.845">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="對方點數:"
            android:textColor="#230C0C"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:visibility="gone"
            app:srcCompat="@drawable/d6"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:visibility="gone"
            app:srcCompat="@drawable/d5"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:visibility="gone"
            app:srcCompat="@drawable/d4"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:visibility="gone"
            app:srcCompat="@drawable/d3"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:visibility="gone"
            app:srcCompat="@drawable/d2"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:visibility="gone"
            app:srcCompat="@drawable/d1"
            tools:visibility="gone" />
    </LinearLayout>

    <Spinner
        android:id="@+id/bigor"
        android:layout_width="122dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:background="#C6F2F8"
        android:clickable="true"
        android:entries="@array/bigor"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/mul"
        app:layout_constraintStart_toStartOf="@+id/mul" />

    <Button
        android:id="@+id/button"
        android:layout_width="138dp"
        android:layout_height="147dp"
        android:onClick="onClick"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/btn"
        app:layout_constraintEnd_toEndOf="@+id/btn"
        app:layout_constraintStart_toStartOf="@+id/btn"
        app:layout_constraintTop_toTopOf="@+id/btn"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>